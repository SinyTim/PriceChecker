<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160sp"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingStart="25sp"
    android:paddingLeft="25sp"
    android:paddingTop="10dp"
    android:paddingRight="35sp"
    android:paddingEnd="35sp"
    android:paddingBottom="20dp"
    android:background="@drawable/round_corners"
    >


    <Button
        android:id="@+id/buttonListItemCancel"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_gravity="end"
        android:background="@drawable/picture_delete_product" />

    <TextView
        android:id="@+id/textViewListItemName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="@string/amount"
            android:textSize="20sp"
            android:textColor="@color/white" />

        <Spinner
            android:id="@+id/spinnerListItemAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:popupBackground="@color/black"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="@string/totalSum"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textViewListItemTotalSum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:text="TextView"
                android:textColor="@color/white"

                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>